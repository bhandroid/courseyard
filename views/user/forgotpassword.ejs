<%- include ../partials/homeheader %>
<head>
    <link rel="stylesheet" href="/stylesheets/emailcheck.css">
</head>


<div class="awrap">
    <% if(errorMsg !=null && errorMsg.length>0) {%>
        <div id="flash-msg" class="alert alert-danger" style="position:absolute;top: 20%;left: 50%;transform: translate(-50%,-50%);width: fit-content;"><%=errorMsg %></div>
        <%}%>
    <div class="acontainer" id="container" style="width: 400px;min-height: 400px;">
        
      <div class="form-container sign-in-container" style="width: 100%;top: 20%;">

        <form action="/user/emailcheck" method="POST">
          <input type="email" placeholder="Email" name="email" required/>
          <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
          <p style="margin: 5px;margin-left: -160px;color: red;">*Enter valid email</p>
          <button>Submit</button>
        </form>
      </div>
     <div class="overlay-container" style="width: 100%;height: 40%;left: 0;">
        <div class="overlay">
          <div class="overlay-panel overlay-right">
            <svg class="icon" style="margin: 0; font-size: 60px;fill:rgb(6, 171, 236)">
                <use xlink:href="#icon-email"></use></svg >
            <h2 style="color: white;">Enter your  Email</h2> 
            <p style="margin: 0;">reset password link will be sent to your email</p>
          </div>
        </div>
      </div> 
    </div>
  </div>
    <svg>

        <symbol id="icon-email" viewBox="0 -54 500 500">
